{
  "private": true,
  "name": "ai-agent-messenger-samples",
  "version": "0.0.1",
  "description": "AI Agent Messenger Sample - Basic",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "corepack enable",
    "install": "pnpm prepare && pnpm preinstall",
    "dev": "vite",
    "build": "vite build",
    "format": "prettier --check \"**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx}\""
  },
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.7",
    "@codemirror/lang-javascript": "^6.2.1",
    "@codemirror/lang-bash": "^6.4.7",
    "@tailwindcss/vite": "^4.0.15",
    "@uiw/codemirror-theme-dracula": "^4.23.10",
    "@uiw/react-codemirror": "^4.21.21",
    "@sendbird/ai-agent-messenger-react": "./sendbird-ai-agent-messenger-react-1.0.0.tgz",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.15",
    "vite": "^5.1.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "preserve",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "@sendbird[./]?",
      "@(components|constants|types|utils)[./]?",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderCaseInsensitive": false
  }
}
